{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Current File",
        "type": "python",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/src"
        }
      },
      {
        "name": "Run Tests",
        "type": "python",
        "request": "launch",
        "program": "${workspaceFolder}/.venv/Scripts/pytest",
        "args": ["-q"],
        "console": "integratedTerminal"
      }
    ]
  }
  